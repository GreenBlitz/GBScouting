{
  "compilerOptions": {
    "target": "ES2015", // Ensure ECMAScript 2015+ is targeted
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "outDir": "compiled",
    "jsx": "react",
    "lib": ["ES2015", "DOM"], // Ensure ES2015 and DOM APIs are available
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": false
  },
  "include": ["src/backend/**/*.ts"]
}
